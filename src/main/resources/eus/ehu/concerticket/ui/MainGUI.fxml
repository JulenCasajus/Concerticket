<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainWrapper" minHeight="720.0" minWidth="1280.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eus.ehu.concerticket.uicontrollers.MainGUIController">
    <center>
        <AnchorPane maxHeight="500.0" maxWidth="880.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="875.0" BorderPane.alignment="CENTER" />
    </center>
    <left>
        <AnchorPane prefHeight="500.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
            <children>
                <Label fx:id="selectOptionLbl" layoutX="25.0" prefHeight="32.0" prefWidth="175.0" text="%SelectUseCase" textAlignment="CENTER">
                    <font>
                        <Font size="22.0" />
                    </font></Label>
                <Button fx:id="createRideBtn" disable="true" layoutX="25.0" layoutY="100.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="150.0" text="%MainGUI.CreateRide">
                    <font>
                        <Font size="16.0" />
                    </font></Button>
                <Button fx:id="queryRidesBtn" layoutX="25.0" layoutY="50.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="150.0" text="%MainGUI.QueryRide">
                    <font>
                        <Font size="16.0" />
                    </font></Button>
                <Button fx:id="createAlertBtn" disable="true" layoutX="25.0" layoutY="150.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="150.0" text="%MainGUI.CreateAlert">
                    <font>
                        <Font size="16.0" />
                    </font></Button>
                <Button fx:id="acceptRideBtn" disable="true" layoutX="25.0" layoutY="200.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="150.0" text="%MainGUI.AcceptRide">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button fx:id="queryAlertsBtn" disable="true" layoutX="25.0" layoutY="248.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="150.0" text="%MainGUI.QueryAlerts">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </left>
    <top>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="lblUser" layoutX="1100.0" layoutY="60.0" prefHeight="45.0" prefWidth="150.0">
                    <font>
                        <Font size="24.0" />
                    </font></Label>
                <Button fx:id="LogInButton" layoutX="1050.0" layoutY="60.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="200.0" text="%LogIn" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Button fx:id="RegisterButton" layoutX="1050.0" layoutY="125.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="200.0" text="%SignUp" textAlignment="CENTER">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Label layoutX="410.0" layoutY="64.0" text="CONCERTICKETS" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="59.0" />
                    </font>
                </Label>
                <Button fx:id="LogOutButton" layoutX="1050.0" layoutY="125.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="200.0" text="%LogOut" textAlignment="CENTER" visible="false">
                    <font>
                        <Font size="24.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
            </children>
        </AnchorPane>
    </top>
    <right>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </right>
</BorderPane>
